@model Frontend.Models.CarritoViewModel

@{
    ViewData["Title"] = "Crear";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                @Html.DropDownListFor(model => model.ProductoId, new SelectList(Model.Productos, "ProductoId", "Nombre"), "Seleccionar Producto")
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                  <span asp-validation-for="Cantidad" class="text-danger"></span>
              </div>
            @Html.HiddenFor(Model => Model.PrecioUnitario)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
